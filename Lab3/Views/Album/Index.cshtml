@model IEnumerable<Lab3.Models.Album>

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Artist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Album album in Model)
        {
            <tr>
                <td>
                    @album.Title
                </td>
                <td>
                    @album.Artist
                </td>
                <td>
                    @album.Genre
                </td>
                <td>
                    @album.Price
                </td>
                <td>
                    <a asp-route-id="@album.Id" asp-controller="Album" asp-action="Details">Details</a>
                    <a asp-route-id="@album.Id" asp-controller="Album" asp-action="Edit">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
